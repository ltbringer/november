{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "noEmit": false,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "typeRoots" : ["node_modules/@types"]
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["dist", "build", "node_modules"]
}
